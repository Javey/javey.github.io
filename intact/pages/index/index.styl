@import '../../css/variables'

.index-page
    .content-wrapper
        height 100%
        background #fff
        padding-top 60px
        box-sizing border-box
        text-align center
    .home-header
        padding 50px 0
        h1
            font-size 5em
        p
            font-size 2em
            font-weight 300
            color #46484a
        .button
            display inline-block
            background #d04
            color #fff
            padding 0 2em
            border-radius 0.2em
            margin 0 10px
            height 3em
            line-height 3em
            box-sizing border-box
            &:hover
                background linkColor
        .button.white
            background #fff
            border 1px solid #ccc
            color #666
            &:hover
                background #eee
        .features
            width width
            margin 0 auto
            display flex
            margin-top 50px
        .feature
            h2
                margin 10px
            flex 1
    .home-components
        background #09d
        height 500px
        padding 30px 0
        box-shadow 0 -0.25em 1.5em rgba(0,5,10,0.25)
        h1
            font-size 3em
            color #fff
