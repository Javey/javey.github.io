@import '../../css/variables'
@import '../document/highlight';

headerHeight = 80px

.index-page
    .header-wrapper
        height headerHeight
        line-height headerHeight 
    .content-wrapper
        min-height 100%
        background #fff
        padding-top headerHeight 
        box-sizing border-box
        text-align center
    .home-header
        padding 50px 0
        h1
            font-size 5em
        p
            font-size 2em
            font-weight 300
            color #46484a
        .button
            display inline-block
            background #d04
            color #fff
            padding 0 2em
            border-radius 0.2em
            margin 0 10px
            height 3em
            line-height 3em
            box-sizing border-box
            &:hover
                background linkColor
        .button.white
            background #fff
            border 1px solid #ccc
            color #666
            &:hover
                background #eee
        .features
            width width
            margin 0 auto
            display flex
            margin-top 50px
        .feature
            h2
                margin 10px
            flex 1
    .home-components
        background #09d
        padding 30px 0
        box-shadow 0 -0.25em 1.5em rgba(0,5,10,0.25)
        h1
            font-size 3em
            color #fff
        h3
            color #37393b
            font-size 1.3em
            margin 0.5em 0
    .code-wrapper
        display flex
        flex-direction row
        justify-content center
        text-align left
        .code
            width 600px
            pre
                margin 10px
            code
                background #fff
        .output
            width 300px
            margin 10px
            background #fff
            border-radius 3px
            padding 15px
    pre
        text-align left
