@import './variables';

html
body
    margin 0
    font-size 14px
    color #333
    background #efefef
    height 100%
a
    color #2d8cf0
    text-decoration none
h1, h2, h3, h4, h5
    margin 0
    font-weight normal 

#page
.app-wrapper
.main-wrapper
    height 100%

.header-wrapper
    height 60px
    line-height 60px
    box-shadow 0 1px 1px rgba(0, 0, 0, .08)
    background #fff
    header
        width width
        margin 0 auto
    .logo
        font-size 24px
        color #333
    nav
        float right
        a
            display inline-block
            padding 0 20px
            color #333
            &.active
                color linkColor
                border-bottom 2px solid linkColor
