@import '../../css/solarized_light.css';

.ctrl-main-container
    padding 0
.javascript .xml
    opacity 1
.hljs-aspect .hljs-title, .hljs-class .hljs-title, .hljs-params, .hljs-variable
    color #618ea5 

aside
    position fixed
    width 150px
    height 100%
    background #fff
    border-right 1px solid #d9d9d9
    overflow auto
    h5
        color #999
        font-size 14px
        margin 25px 0 15px 20px
    ul
        list-style none
        margin 0
        padding 0
    li
        a
            display block
            color #333
            height 30px
            line-height 30px
            padding-left 24px
        &.active
            a
                color #fe4444
                background #f5e6e6

article
    margin 15px 15px 15px 165px
    flex 1
    border 1px solid #d9d9d9
    padding 0 15px
    h2
        margin 30px 0 20px 0
    h3
        margin-top 20px
        code
            font-size 16px
.article-head
    border-bottom 1px solid #eee
    padding 10px 0
    margin-bottom 20px
    h1
        font-size 18px
        margin-bottom 0
        float left
.edit-link
    float right
    font-size 14px
    margin-top 10px
    font-family: 'Lucida Grande', 'Calibri', Helvetica, Arial, sans-serif;

pre
    font-size 14px

blockquote
    border-left 4px solid #ddd
    color #777
    padding 0 15px
    margin 0 0 15px 0

.example {
    padding: 0;
    display: flex;
    list-style: none;
    margin-right: -2em;
}
.example > li {
    margin-right: 2em;
    flex: 1;
    display: flex;
    flex-direction: column;
}
.example-js,
.example-js pre {
    display: flex; 
    flex: 1;
}
.example-js code {
    flex: 1;
}
.example-output {
    margin: 1em 0;
    padding: 0.5em;
    background: #f6f6f6;
    flex: 1;
    border-radius: 4px;
    font-size: 14px;
}


